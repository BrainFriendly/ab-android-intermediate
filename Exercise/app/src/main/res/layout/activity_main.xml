<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context="com.brainfriendly.android.mapsAndLocation.MainActivity">

    <Button
        android:id="@+id/androidLocationApiButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="50dp"
        android:text="@string/androidLocationApiButtonLabel" />

    <Button
        android:id="@+id/googleLocationApiButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/googleLocationApiButtonLabel" />

    <Button
        android:id="@+id/androidMapsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/googleMapsApiButtonLabel" />

</LinearLayout>
